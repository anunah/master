@model EShop.Models.LoginModel


<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">X</button>
        <h4>Войти</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("LoginAjax", "Account", new { ReturnUrl = ViewBag.ReturnUrl },FormMethod.Post ,new { @class = "form-horizontal", id = "LoginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="control-group">
                @Html.ValidationSummary(true)
            </div>
                           
                <div class="control-group">
                    <div class="controls">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-2", placeholder="Логин" })
                        @Html.ValidationMessageFor(m => m.UserName)
                      
                    </div>
                </div>
                <div class="control-group">
                     <div class="controls">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Пароль" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="control-group">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" }) @Html.LabelFor(m => m.RememberMe)
                 </div>  
            <p>
                 @Html.ActionLink("Зарегистрироваться", "Register"), если у вас нет учетной записи.
            </p>
        }
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Закрыть</button>
        <button class="btn btn-primary" id="LoginButton">Войти</button>
    </div>
</div>
