@model EShop.Models.ListAnswerName
@{int i = ViewBag.Index;}
<div id="answerwrapper">
    
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Следующий ответ</label>

            <div class="col-sm-10">
                @Html.TextBox("ListAnswerName[" + i + "].NameAnswer", "", new { @class = "form-control" })
                @Html.ValidationMessage("ListAnswerName[" + i + "].NameAnswer")
            </div>
        </div>
        <div class="col-sm-offset-2 col-sm-10">
            <div class="form-group">
                <div class="btn btn-default">Удалить</div>
            </div>
        </div>

    
</div>
