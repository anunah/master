@model List<EShop.Models.ResultUserTest>

@{
    ViewBag.Title = "Результаты тестов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Результаты тестов</h3>

<table class ="table">
    <tr>
        <th>Название теста</th>
        <th>Коли-во попыток</th>
        <th>Лучший результат</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attempt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxResult)
        </td>
        <td>@Html.ActionLink("Подробнее", "DetailResTest", "Test", new { idTest = item.idTest, username = item.UserName }, new {@class = "viewDialog" })</td>
    </tr>
}

</table>
<div id="modDialog" class="modal fade" >
    <div id="dialogContent" class="modal-dialog"></div>
</div>

