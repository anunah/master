<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/jqueryui")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    
    <!-- Static navbar -->
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Имя проекта</a>
        </div>
        <div class="navbar-collapse collapse in">
           <ul class="nav navbar-nav">
                <li class="@Html.IsSelected("Home", "Index")">@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                <li class="@Html.IsSelected("Test", "Index")">@Html.ActionLink("Тесты", "Index", "Test")</li>
                <li class="@Html.IsSelected("Test", "UserResultTest")">@Html.ActionLink("Результаты", "UserResultTest", "Test", new { username = User.Identity.Name }, new { })</li>
                @if (User.IsInRole("admin"))
                {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Администрирование<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Добавить тест", "AddTest", "AddTest")</li>
                        <li>@Html.ActionLink("Модерация тестов", "UpdateTest", "AddTest")</li>
                        <li><a href="#">Null</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Null</li>
                        <li><a href="#">Null</a></li>
                        <li><a href="#">Null</a></li>
                    </ul>
                </li>
                }
          </ul>
          @Html.Partial("_LoginPartial")
          
        </div><!--/.nav-collapse -->
      </div>
    </div>
    
    @RenderSection("featured", required: false)
    
    <div class="container">

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
         @RenderBody()
      </div>

    </div> <!-- /container -->
    <div id="modDialog" class="modal fade" >
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)
</body>
</html>
