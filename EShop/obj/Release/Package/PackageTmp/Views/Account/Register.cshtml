
@model EShop.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<hgroup class="title">
    <h4>Создание новой учетной записи.</h4>
</hgroup>
<div class ="form">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    
        
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-4" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-4" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-4" })
            </div>
        
        <input type="submit" value="Регистрация" class="btn btn-default" />
   
}
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
